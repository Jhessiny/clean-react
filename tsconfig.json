{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
